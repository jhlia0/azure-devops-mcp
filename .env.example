# Azure DevOps Configuration
# Copy this file to .env and fill in your values

# Azure DevOps organization name (e.g., "mycompany")
ORGANIZATION=your-organization

# Azure DevOps project name (e.g., "MyProject")
PROJECT=your-project

# Personal Access Token for Azure DevOps
# Create one at: https://dev.azure.com/{organization}/_usersSettings/tokens
AZURE_DEVOPS_PAT=your-personal-access-token

# Optional: API version (defaults to 7.0)
API_VERSION=7.0

# Optional: Base URL (defaults to https://dev.azure.com)
BASE_URL=https://dev.azure.com

# Default Search Settings
# These settings will be used when no specific values are provided

# Default team name for backlog queries
DEFAULT_TEAM=your-team-name

# Default user for work item queries (display name or email)
DEFAULT_USER=your-username

# Default work item types (comma-separated)
DEFAULT_WORK_ITEM_TYPES=Bug,Task,User Story,Product Backlog Item

# Default maximum number of results to return
DEFAULT_MAX_RESULTS=100

# Filter settings (true/false)
EXCLUDE_CLOSED=true
EXCLUDE_REMOVED=true

# Default iteration path (e.g., "MyProject\\Sprint 1")
DEFAULT_ITERATION_PATH=

# Default area path (e.g., "MyProject\\Team A")
DEFAULT_AREA_PATH=